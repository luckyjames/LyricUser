<Window x:Class="LyricUser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lyricUserNamespace="clr-namespace:LyricUser"
        Title="LyricUser"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanResizeWithGrip"
        KeyUp="Window_KeyUp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        d:DesignHeight="300"
        d:DesignWidth="300">
    <!--Use dock panel so that last child (the lyrics box) fills the available space-->
    <DockPanel>
        <Border BorderBrush="#FF000000" BorderThickness="1,1,1,1" CornerRadius="8,8,8,8" Background="Blue">
            <StackPanel>
                <TextBlock Foreground="White">Artist -</TextBlock>
                <TextBlock Foreground="White">Title -</TextBlock>
                <TextBlock Foreground="White">Key -</TextBlock>
                <TextBlock Foreground="White">Capo -</TextBlock>
            </StackPanel>
        </Border>
        <lyricUserNamespace:AutoScalingTextBox x:Name="lyricsBox" InfoText="Default" />
    </DockPanel>
</Window>
